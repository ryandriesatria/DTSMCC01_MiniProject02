@model MiniProject02.ViewModels.DetailsEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DetailsEdit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input readonly asp-for="ProductName" class="form-control" value="@Model.ProductName"/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="@Model.OldQuantity"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input hidden name="OldQuantity" value="@Model.OldQuantity" />
            <div class="form-group">
                <label asp-for="Kasir" class="control-label"></label>
                <select asp-for="Kasir" class="form-control">
                    @foreach (var item in ViewBag.employeesName)
                    {
                        <option value=@item>@item</option>
                    }
                </select>
                <span asp-validation-for="Kasir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
